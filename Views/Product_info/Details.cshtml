@model AppArcade.Models.Product_info

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .card {
        background-color: #c79898;
        border: none;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 30px;
    }

    .btn {
        border-radius: 20px;
        padding: 10px 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #218838;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }
</style>


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Product Details</h4>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8" style="font-weight:bold">@Html.DisplayFor(model => model.Product_Name)</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8" style="color:aquamarine">@Html.DisplayFor(model => model.Product_Price)</dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Product_Category)</dd>

                    <dt class="col-sm-4">Description:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Product_Description)</dd>

                    @*<dt class="col-sm-4">Data:</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Product_Data)</dd>*@
                </dl>
            </div>

            <div class="col-md-6">
                <img src="@Model.Product_Image" class="img-fluid" alt="Product Image">
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    @if (Session["SessionId"] == null)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Product_id }, new { @class = "btn btn-primary mr-2" })
    }

    <a href="@Url.Action("AddToCart", "Cart", new { productid = Model.Product_id })" class="btn btn-success">Add to Cart</a>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary ml-2" })
</div>

